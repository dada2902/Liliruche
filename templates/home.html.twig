                    {% endfor %}  
                    <div class="product-infos">
                        <h3 class="nom_prix1">{{ product.nomDeProduit }}</a></h3>
                            <div class="price_cart">
                                <h4 class="nom_prix2">{{ product.prix }}€</h4>
                                <a type="button" class="btn btn-warning" href="{{ path('cart_add', {'id': product.id})}}"><i style="color: white; font-size:25px;" class="fas fa-cart-plus"></i></a>
                            </div>
                    </div>
                </article>
            </div>

        {% endfor %}   

