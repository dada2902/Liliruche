{% include 'Header_Footer/header.html.twig' %}

{% block body %}
<main class="fond_article">
    <div class="container_main">
        <form>
            <ul id="main_list">
                <li><a href=""><img src="https://img.icons8.com/fluent-systems-regular/24/000000/honeycombs.png" alt=""/> Miels</a></li>
                <li><a href=""><i class="fab fa-pagelines"></i> Epicerie fine</a></li>
                <li><a href=""><i class="fas fa-hand-holding-heart"></i> Bien-être</a></li>
                <li><a href=""><i class="fas fa-gift"></i> Coffrets Cadeaux</a></li>
            </ul>
        </form>
    </div>
      
     <div class="container_article">

        {% for product in products %} 
            <div class="shop-item">
                <article>
                <a href="{{ path('article', {id:product.id})}}">
                    {% for image in product.images %} 
                        <figure class="container-img">
                            <img class="img_article" src="{{'uploads/' ~ image.titre }}" alt="">
                        </figure>
                        </a>
                    {% endfor %}  
                    <div class="product-infos">
                        <a style="text-decoration: none;" href="{{ path('article', {id:product.id})}}">
                        <h3 class="nom_prix1">{{ product.nomDeProduit }}</h3>
                        </a>
                        <div class="price_cart">
                            <h4 class="nom_prix2">{{ product.prix }}€</h4>
                            <a href="{{ path('cart_add', {'id': product.id})}}" class="btn btn-warning"><i style="color: white; font-size:25px;" class="fas fa-cart-plus"></i></a>
                        </div>
                    </div>
                </article>
            </div>

        {% endfor %}   

    </div>  
      
</main>
 {% endblock %}

 {% include 'Header_Footer/footer.html.twig' %}