{% extends 'base.html.twig' %}

{% block title %} Liste des produits {% endblock %}

  
{% block body %}
     <h1> Listes des produits </h1>

  <table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">Titre</th>
      <th scope="col">Prix</th>
      <th scope="col">Catégorie</th>
      <th scope="col">Déscription</th>
      <th scope="col" class="centrer">Action</th>
    </tr>
  </thead>
  
  <tbody>
      {% for product in products %} 
    <tr>
        <th scope="row">{{ product.id }}</th>
            <td>{{ product.nomDeProduit }}</td> 
            <td>{{ product.prix }}€</td>
            <td>{{ product.category.nom }}</td> 
            <td>{{ product.description }}</td>
            <td><a href="{{ path('edit-product', {id : product.id}) }}" type="button" class="btn btn-warning">Modifier</a></td>
            <td><a href="{{ path('delete-product', {id : product.id}) }}" type="button" class="btn btn-danger">Supprimer</a></td>    
    </tr>
     {% endfor %} 
  </tbody>
  </table>
     
{% endblock %}